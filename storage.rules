rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Permitir lectura pública a todos los archivos (imágenes, recursos)
    match /{allPaths=**} {
      allow read: if true;
      
      // Solo el administrador autenticado puede subir o borrar archivos
      allow write: if request.auth != null;
    }
  }
}
