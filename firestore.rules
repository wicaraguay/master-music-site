rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Permitir lectura p√∫blica a todas las colecciones del portafolio
    match /{collectionName}/{document} {
      allow read: if true;
      
      // Solo el administrador autenticado puede crear, actualizar o eliminar
      allow write: if request.auth != null;
    }
  }
}
